# Debezium CDC with RabbitMQ and MongoDB - Environment Configuration

# ------------------------------------------------------------
# General Configuration
# ------------------------------------------------------------
# Versions
MYSQL_VERSION=8.0
MONGODB_VERSION=6.0
RABBITMQ_VERSION=3.12
DEBEZIUM_VERSION=3.0.0.Final

# Network Configuration
MYSQL_PORT=3306
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
MONGODB1_PORT=27017
MONGODB2_PORT=27018

# ------------------------------------------------------------
# MySQL Configuration
# ------------------------------------------------------------
MYSQL_HOST=mysql
MYSQL_ROOT_PASSWORD=debezium
MYSQL_USER=debezium
MYSQL_PASSWORD=dbz
MYSQL_DATABASE=inventory

# MySQL Server Configuration
MYSQL_SERVER_ID=1
MYSQL_BINLOG_FORMAT=ROW
MYSQL_BINLOG_ROW_IMAGE=FULL
MYSQL_EXPIRE_LOGS_DAYS=10

# ------------------------------------------------------------
# RabbitMQ Configuration
# ------------------------------------------------------------
RABBITMQ_HOST=rabbitmq
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=mysql-events
RABBITMQ_EXCHANGE_TYPE=topic
RABBITMQ_QUEUE_NAME=mysql.events
RABBITMQ_ROUTING_KEY=${topic}
RABBITMQ_URI=amqp://${RABBITMQ_USER}:${RABBITMQ_PASSWORD}@${RABBITMQ_HOST}:${RABBITMQ_PORT}/${RABBITMQ_VHOST}

# ------------------------------------------------------------
# MongoDB Configuration
# ------------------------------------------------------------
MONGODB_USER=admin
MONGODB_PASSWORD=admin
MONGODB_DATABASE=cdc_data
MONGODB_COLLECTION_PREFIX=mysql

# MongoDB 1
MONGODB1_HOST=mongodb1
MONGODB1_URI=mongodb://${MONGODB_USER}:${MONGODB_PASSWORD}@${MONGODB1_HOST}:27017/

# MongoDB 2
MONGODB2_HOST=mongodb2
MONGODB2_URI=mongodb://${MONGODB_USER}:${MONGODB_PASSWORD}@${MONGODB2_HOST}:27017/

# ------------------------------------------------------------
# Debezium Configuration
# ------------------------------------------------------------
DEBEZIUM_SINK_TYPE=rabbitmq
DEBEZIUM_CONNECTOR_CLASS=io.debezium.connector.mysql.MySqlConnector
DEBEZIUM_OFFSET_STORAGE_FILE=/debezium/data/offsets.dat
DEBEZIUM_OFFSET_FLUSH_INTERVAL_MS=0
DEBEZIUM_TOPIC_PREFIX=mysql
DEBEZIUM_SOURCE_DB_INCLUDE_LIST=inventory
DEBEZIUM_SOURCE_TABLE_INCLUDE_LIST=inventory.customers,inventory.orders
DEBEZIUM_SCHEMA_HISTORY_FILE=/debezium/data/schema_history.dat
DEBEZIUM_SCHEMA_HISTORY_CLASS=io.debezium.storage.file.history.FileSchemaHistory
DEBEZIUM_FORMAT_VALUE=json
DEBEZIUM_FORMAT_KEY=json

# Asynchronous Engine Properties
DEBEZIUM_RECORD_PROCESSING_THREADS=8

# Custom Key Formatting (can be customized as needed)
DEBEZIUM_KEY_CONVERTER_SCHEMAS_ENABLE=false

# Quarkus Monitoring Configuration
QUARKUS_HTTP_PORT=8080
QUARKUS_MANAGEMENT_ENABLED=true
QUARKUS_SMALLRYE_HEALTH_UI_ENABLE=true
QUARKUS_SMALLRYE_METRICS_ENABLED=true

# Debezium Server ID (must be unique in the MySQL cluster)
DEBEZIUM_SERVER_ID=184054
